generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  avatar    String?
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // address   Address?  @relation(fields: [addressId], references: [id])
  // addressId Int       @unique
  post      Post[]
  comment   Comment[]
}

// model Address {
//   id          Int    @id @default(autoincrement())
//   fullAddress String
//   User        User?
// }

model Post {
  id           Int            @id @default(autoincrement())
  title        String
  body         String
  updatedAt    DateTime       @updatedAt
  createdAt    DateTime       @default(now())
  user         User           @relation(fields: [userId], references: [id])
  userId       Int
  comment      Comment[]
  PostCategory PostCategory[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  // comment   Comment[] @relation("Replies", fields: [commentId], references: [id])
  // commentId Int?      @unique
}

model Cateogory {
  id           Int            @id @default(autoincrement())
  name         String
  PostCategory PostCategory[]
}

model PostCategory {
  id         Int       @id @default(autoincrement())
  post       Post      @relation(fields: [postId], references: [id])
  postId     Int       @unique
  category   Cateogory @relation(fields: [categoryId], references: [id])
  categoryId Int       @unique
}
